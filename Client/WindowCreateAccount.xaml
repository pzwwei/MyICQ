<Window x:Class="Client.WindowCreateAccount"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WindowCreateAccount" Height="169" Width="244" Loaded="Window_Loaded" Icon="emblem.jpg">
    <Grid Height="113">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Content="New account" Name="labelNewAccount" HorizontalContentAlignment="Center"></Label>
        <Label Grid.Row="1" Grid.Column="0" Content="Username:" Name="labelUsername" HorizontalContentAlignment="Center"></Label>
        <TextBox Grid.Row="1" Grid.Column="1" Name="textBoxUsername"></TextBox>
        <Label Grid.Row="2" Grid.Column="0" Content="Password:" Name="labelPassword" HorizontalContentAlignment="Center"></Label>
        <TextBox Grid.Row="2" Grid.Column="1" Name="textBoxPassword"></TextBox>
        <Button Grid.Row="3" Grid.Column="1" Content="Register!" Margin="0,0,0,4" Name="buttonRegister" Click="buttonRegister_Click"></Button>
    </Grid>
</Window>
